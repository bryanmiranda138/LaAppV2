<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo del shape (color sólido transparente) -->
    <solid android:color="#00FFFFFF" /> <!-- Color de fondo transparente -->

    <!-- Borde del shape -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Color del borde, aquí es negro -->

    <!-- Esquinas del shape (esquinas redondeadas) -->
    <corners
        android:radius="8dp" /> <!-- Radio de las esquinas en dp -->

</shape>

