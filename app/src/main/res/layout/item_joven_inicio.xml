<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_marginVertical="5dp">

    <!-- ImageView para mostrar la imagen del estudiante -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewJoven"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop" />

    <!-- Contenedor para título, descripción entre otros -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Joven"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Contenedor para los iconos de trabajos -->
        <LinearLayout
            android:id="@+id/trabajosIconosContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

    </LinearLayout>

</LinearLayout>
